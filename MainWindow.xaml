<Window x:Class="Circularity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Circularity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="434" VerticalAlignment="Center" HorizontalAlignment="Left" Width="800">
        <Rectangle HorizontalAlignment="Center" Height="434" VerticalAlignment="Center" Width="800" Fill="#FF252525"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,402,0,0" TextWrapping="Wrap" Text="Circularity" VerticalAlignment="Top" FontFamily="POLYA Regular" Height="21" Width="128" FontSize="18" FontWeight="Normal" Foreground="#FFC8C8C8"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Welcome!" VerticalAlignment="Top" FontFamily="Slot" FontSize="72" Foreground="White" FontWeight="Normal"/>
        <Button x:Name="getstartedbutton" Content="Get Started" HorizontalAlignment="Center" Margin="0,269,0,0" VerticalAlignment="Top" FontFamily="Panama Light" FontSize="24" Height="40" Width="167" Foreground="#FFD8D8D8" BorderBrush="#FFA29F9F" Background="{x:Null}" Click="GetStartedClick"/>
    </Grid>
</Window>
